{
    "extends": "eslint:recommended",
    "plugins": [
        "eslint-plugin-prettier"
    ],
    "env": {
        "node": true,
        "es6": true
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module",
        "ecmaFeatures": {
            "modules": true
        }
    },
    "rules": {
        "prettier/prettier": "error",
        "no-global-assign": ["error", {"exceptions": ["require"]}],
        "no-console":"off"
    }
}